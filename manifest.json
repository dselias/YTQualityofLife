{
  "manifest_version": 3,
  "name": "Youtube QOLT",
  "version": "1.2.0",
  "description": "Youtube Quality of Life Tweaks",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/feed/subscriptions"],
      "js": ["scripts/Highlight.js"],
      "css": ["styles/Highlight.css"]
    },
    {
      "matches": ["https://www.youtube.com/watch?*&list=*"],
      "js": ["scripts/PlaylistRemovePopup.js"]
    }
  ],
  "icons": {
    "128": "images/logo/logo.png"
  },
  "action": {
    "default_icon": "images/logo/logo.png",
    "default_popup": "popup.html"
  }
}
