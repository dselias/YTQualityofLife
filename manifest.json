{
  "manifest_version": 3,
  "name": "Youtube QOLT",
  "version": "1.0.2",
  "description": "Youtube Quality of Life Tweaks",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["scripts/contentScripts/main.js", "scripts/contentScripts/features/Highlight.js"],
      "css": ["styles/Highlight.css"]
    }
  ],
  "icons": {
    "128": "images/logo/logo.png"
  },
  "action": {
    "default_icon": "images/logo/logo.png",
    "default_popup": "popup.html"
  }
}
